Name:           diagrams-doc
Version:        1.4
License:        BSD3
Cabal-Version:  >=1.10
Build-type:     Simple

library
  hs-source-dirs:   web/banner, web/gallery, doc
  exposed-modules:  BuildBanner
                  , BuildGallery
                  , Xml2Html
  build-depends:    base >= 4.8 && < 5
                  , containers
                  , directory
                  , filepath
                  , cmdargs
                  , split
                  , diagrams-builder
                  , diagrams-rasterific
                  , JuicyPixels

                  , diagrams-builder >= 0.7.2 && < 0.9
                  , diagrams-core >= 1.5 && < 1.6
                  , diagrams-lib >= 1.4 && < 1.5
                  , docutils >= 0.2 && < 0.3
                  , hxt

                    -- The below packages are required by the doc/*.rst files
                    -- that Xml2Html interprets.
                  , SVGFonts
                  , diagrams-contrib
                  , diagrams-svg
                  , colour
                  , palette
                  , random
                  , lens
  default-language: Haskell2010

executable diagrams-doc
  main-is: Shake.hs
  hs-source-dirs: .
  default-language: Haskell2010
  ghc-options:  -threaded
  build-depends: base >= 4.8 && < 5
               , diagrams-doc
               , diagrams-builder >= 0.7.2 && < 0.9
               , shake >= 0.15 && < 0.20
               , hakyll >= 4.7 && < 4.15
               , docutils >= 0.2 && < 0.3
               , safe >= 0.3 && < 0.4
               , cmdargs >= 0.10 && < 0.11
               , directory
               , process
               , parallel

executable Warning
  main-is:          Warning.hs
  ghc-options:      -main-is Warning
  hs-source-dirs:   doc/icons
  default-language: Haskell2010
  build-depends:    base >= 4.8 && < 5
                  , diagrams-core >= 1.5 && < 1.6
                  , diagrams-lib >= 1.4 && < 1.5
                  , diagrams-rasterific

executable ToWrite
  main-is:          ToWrite.hs
  ghc-options:      -main-is ToWrite
  hs-source-dirs:   doc/icons
  default-language: Haskell2010
  build-depends:    base >= 4.8 && < 5
                  , diagrams-core >= 1.5 && < 1.6
                  , diagrams-lib >= 1.4 && < 1.5
                  , lens
                  , diagrams-rasterific

executable Exercises
  main-is:          Exercises.hs
  ghc-options:      -main-is Exercises
  hs-source-dirs:   doc/icons
  default-language: Haskell2010
  build-depends:    base >= 4.8 && < 5
                  , diagrams-core >= 1.5 && < 1.6
                  , diagrams-lib >= 1.4 && < 1.5
                  , lens
                  , diagrams-rasterific

executable Site
  main-is:          Site.hs
  ghc-options:      -main-is Site
  hs-source-dirs:   web
  default-language: Haskell2010
  build-depends:    base >= 4.8 && < 5
                  , hakyll >= 4.7 && < 4.15
                  , containers
                  , filepath
                  , cmdargs
                  , pandoc >= 2.0 && < 2.15
                  , text
                  , process
